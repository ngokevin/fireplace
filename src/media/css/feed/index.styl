collection_background_colors($color) {
    background-color: rgba($color, 0.4);

    &[data-collection-landing-is-listing] {
        background: none;
    }
    .collection-landing-curve {
        background-color: rgba($color, 0.8);
    }
    .collection-listing-header {
        background-color: rgba($color, 0.8);
    }
    .collection-landing {
        background-color: $color;
    }
    .collection-landing-header-mobile .curve {
        background-color: rgba($color, 0.8);
    }

    @media $base-tablet {
        background-color: rgba($color, 0.6);

        &[data-collection-landing-is-listing] {
            background-color: rgba($color, 0.6);
        }
    }
}
