/*
    Stylesheet for editorial brands.
*/
@import '../lib';

.brand-header {
    bottom: 15px;
    display: block;
    padding: 10px 0;
    position: relative;
    right: 10px;
    text-align: center;
    width: unquote('calc(100% + 20px)');

    &:hover {
        text-decoration: none;
    }
    h3 {
        color: $white;
        font-weight: 300;
        margin-top: 70px;
    }
    h3:before {
        background-color: rgba($greyscale-light-grey, .8);
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 30px;
        content: '';
        display: block;
        height: 60px;
        left: unquote('calc(50% - 30px)');
        position: absolute;
        top: 10px;
        width: 60px;
    }
}

