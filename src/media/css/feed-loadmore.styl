@import 'lib';

$loadmore-desktop-width = 300px;

[data-page-type~=homepage],
[data-page-type~=app-list] {
    .loadmore {
        // Put loadmore button on its own row.
        margin-bottom: 0;
        max-width: 100%;
        padding-top: 15px;
        width: 100%;
    }
}

[data-page-type~=app-list] {
    .loadmore {
        padding-bottom: 0;
        padding-top: 25px;
    }
}

@media $base-desktop {
    [data-page-type~=homepage],
    [data-page-type~=app-list] {
        padding-bottom: 0;
    }
    [data-page-type~=homepage] .loadmore button {
        width: $loadmore-desktop-width;
    }
    [data-page-type~=app-list] .loadmore {
        clear: both;
        margin: 0 auto;
        width: $loadmore-desktop-width;
    }
    [data-page-type~=search] .loadmore,
    [data-page-type~=leaf] .loadmore {
        width: $loadmore-desktop-width;
    }
}
