@import 'lib';

$arrow-button-size = 30px;

// Install button width.
$btn-install-width = 90px;

// Install button font-size.
$btn-install-font-size = 12px;

.button {
    border: 0;
    color: $white;
    btn_color($action-positive, $action-positive-tapped);
    display: inline-block;
    ellipsis();
    font: 400 $btn-font-size/$medium $primary-font-family;
    height: $btn-medium;
    line-height: 1;
    padding: 0 $btn-h-padding;
    text-align: center;
    text-decoration: none;
    white-space: nowrap;

    &:focus, &:hover, &:active {
        text-decoration: none;
    }
    &:hover, &:focus {
        background: $action-positive-hover;
    }
    // Override `button:not([disabled]):active` from site.styl.
    &:not([disabled]):active,
    &:active {
        btn_color($action-positive-tapped, 'none');
    }
    &.action {
        btn_color($action-success, $action-success-tapped);

        &:hover, &:focus { background: $action-success-hover; }
        &:active { background: $action-success-tapped; }
    }
    &.alt {
        btn_color($action-wait, $action-wait-tapped);

        &:hover, &:focus { background: $action-wait-hover; }
        &:active { background: $action-wait-tapped; }
    }
    &.cancel {
        btn_color($action-error, $action-error-tapped);

        &:hover, &:focus { background: $action-error-hover; }
        &:active { background: $action-error-tapped; }
    }
    &.support {
        btn_color($action-neutral, $action-neutral-tapped);

        &:hover, &:focus { background: $action-neutral-hover; }
        &:active { background: $action-neutral-tapped; }
    }
    &.disabled,
    &[disabled] {
        btn_color($action-disabled, 'none');
    }
    &[disabled],
    &.disabled,
    &.purchasing,
    &.installing {
        pointer-events: none;
    }
    &.installed,
    &.purchased,
    &.incompatible {
        pointer-events: auto;
    }
    &.t, &.product {
        height: $btn-tiny;
    }
    &.s {
        height: $btn-small;
    }
    &.l {
        height: $btn-large;
    }

    // Waiting/Loading spinner.
    &.loading-submit {
        position: relative;

        &:after {
            content: "";
            display: block;
            spinner('absolute alt');
            top: 8px;
        }
    }
    &.product {
        padding: 0 32px;
    }
    .spin {
        display: inline-block;
        spinner('install');
    }
    // Primary CTA buttons with extra padding. Like "Write a Review" on the reviews page.
    &.primo {
        padding-left: 30px;
        padding-right: 30px;
    }
}

a.button {
    padding-top: 17px;

    &.t {
        padding-top: 5px;
    }
}

.arrow-button-left,
.arrow-button-right {
    background-color: $action-positive;
    background-repeat: no-repeat;
    background-size: 15px 15px;
    border: 1px solid $white;
    border-radius: 50%;
    color: transparent;
    cursor: pointer;
    font-size: 0;
    height: $arrow-button-size;
    transition: 150ms;
    width: $arrow-button-size;

    &:hover {
        background-color: $action-positive-hover;
    }

    &:active {
        background-color: $action-positive-tapped;
    }
}

.arrow-button-left {
    background-image: url(../img/pretty/arrow-l.svg);
    background-position: 45% 50%;
}

.arrow-button-right {
    background-image: url(../img/pretty/arrow-r.svg);
    background-position: 55% 50%;
}

@media $retina {
    .button {
        &.loading-submit:after {
            spinner-alt-image('retina');
        }
        .spin {
            spinner-install-image('retina');
        }
    }
}

@media (max-width: 600px) {
    .button.fat {
        display: block;
        width: 100%;
    }
}

// Install buttons.
.mkt-tile .install {
    // Unset many .button properties.
    // To compensate for the larger click target.
    btn_color(transparent, 'none');
    cursor: pointer;
    font-size: $btn-install-font-size;
    height: 34px; // Actual click-target height. Queen Krupa request.
    min-width: $btn-install-width;
    padding: 0;
    position: absolute;
    right: 0;

    em {
        // This em becomes the visual button.
        btn_color($action-positive, $action-positive-tapped);
        display: inline-block;
        ellipsis();
        font-style: normal;
        height: $btn-tiny;
        line-height: $btn-tiny;
        padding: 0 $btn-h-padding;
        vertical-align: bottom;
        width: $btn-install-width;
    }
    .spin {
        display: none;
    }
    // Accomodate a better vertical align since this state has no box-shadow.
    &[disabled] {
        em {
            btn_color($action-disabled, 'none')
        }
        &:hover, &:active {
            em {
                background: $action-disabled;
            }
        }
    }
    &:hover em {
        background: $action-positive-hover;
    }
    &:active em {
        btn_color($action-positive-tapped, 'none');
    }
    &.spinning, &.purchasing {
        background: $action-positive-tapped;
        bottom: 1px;
        height: $btn-tiny;

        em {
            display: none;
        }
        .spin {
            display: inline-block;
        }
    }
}

// Install button launch state.
.mkt-tile .launch {
    em {
        btn_color($action-success, $action-success-active);
    }
    &:hover em {
        background: $action-success-hover;
    }
    &:active em {
        background: $action-success-tapped;
    }
}
