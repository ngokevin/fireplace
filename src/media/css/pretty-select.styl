@import "lib";

$select-height = 30px;

.pretty-select {
    border: 1px solid $filters-border;
    border-radius: 5px;
    font-weight: normal;
    font-size: 20px;
    height: $select-height;

    // Above styles are defined separately in Transonic.
    cursor: pointer;
    display: inline-block;
    padding: 0;
    overflow: hidden;
    position: relative;

    &:before {
        // Custom dropdown arrow
        dropdown();
        background: none;
        color: $drop-arrow;
        content: '\25BC';
        font-size: 10px;
        top: 8px;
        right: -2px;
        z-index: 2;
    }
    &:after {
        // Hide the native `<select>` arrow.
        background: $white;
        border: 0;
        content: "";
        display: block;
        height: 100%;
        pointer-events: none;
        position: absolute;
        right: 0;
        top: 0;
        width: 75px;
        z-index: 1;
    }
    select {
        -moz-padding-start: 10px;
        -webkit-padding-start: 10px;
        appearance-none();
        background: $white;
        border: 0;
        border-radius: 5px;
        box-shadow: none;
        cursor: pointer;
        height: $select-height;
        max-width: none;
        min-width: 229px;
        outline: 0;

        &:-moz-focusring {
            color: $filters-label;
            text-shadow: 0 0 0 #fff;
        }
    }
    option {
        background: #fff;
        color: $text;
        padding: 5px;
    }
}
